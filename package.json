{
  "name": "use-git",
  "displayName": "useGit",
  "description": "A robust, promise-based Git utility for Node.js",
  "version": "0.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/teneplaysofficial/use-git"
  },
  "homepage": "https://teneplaysofficial.github.io/use-git",
  "funding": "https://github.com/sponsors/teneplaysofficial",
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    }
  },
  "scripts": {
    "prepare": "husky",
    "release": "release-hub",
    "build": "tsdown",
    "lint": "yarn biome check --write"
  },
  "lint-staged": {
    "*.{ts,tsx,js,json,md}": [
      "biome check --write"
    ]
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "biome": "^0.3.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "release-hub": "^1.0.0-beta.0",
    "tsdown": "^0.17.0",
    "typescript": "^5.9.3"
  }
}
